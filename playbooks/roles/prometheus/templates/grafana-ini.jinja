# {{ ansible_managed }}
# Grafana configuration

[paths]
provisioning = /etc/grafana/provisioning

[auth]
disable_login_form = false

[auth.anonymous]
enabled = true
org_name = {{ prometheus_grafana_org }}
org_role = Viewer

[security]
admin_user = {{ prometheus_grafana_user }}
admin_password = {{ prometheus_grafana_password }}

[dashboards]
default_home_dashboard_path = /etc/grafana/dashboards/home.json
